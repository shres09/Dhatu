<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A166DC">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="330dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:text="Welcome to Dhatu:"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#252323"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.802"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:text="Start with Sanskrit speaking here!"
        android:textColor="#F6F0F0"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <androidx.cardview.widget.CardView
        android:id="@+id/learning"
        android:layout_width="291dp"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        app:cardBackgroundColor="#6E2BBA"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="73dp"
            android:layout_height="56dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:src="@drawable/a" />

        <TextView
            android:layout_width="194dp"
            android:layout_height="61dp"
            android:layout_gravity="right"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:text="LEARNING"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/textView11"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="36dp"
        android:text="Your Sanskrit Database in one click"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/learning" />

    <androidx.cardview.widget.CardView
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="74dp"
        android:layout_row="0"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="#6E2BBA"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:layout_constraintVertical_bias="0.008">

        <TextView
            android:id="@+id/textView10O"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:text="DATABASE"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="69dp"
            android:layout_height="54dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:src="@drawable/books" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="60dp"
        android:layout_marginTop="36dp"
        android:text="Search all your words here!"
        android:textColor="#FFFBFB"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/button3"
        android:layout_width="301dp"
        android:layout_height="79dp"
        android:layout_row="0"
        android:layout_gravity="center"
        android:layout_marginTop="17dp"
        app:cardBackgroundColor="#6E3AB6"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintVertical_bias="0.004">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:text="THESAURUS"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="73dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:src="@drawable/thesaurus" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="87dp"
        android:layout_height="89dp"

        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:srcCompat="@drawable/dhatu" />


</androidx.constraintlayout.widget.ConstraintLayout>